<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.SecondActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"

            android:background="@color/colorDrugstoreAccent"
            app:titleTextColor="@color/white"
            app:subtitleTextColor="@color/white"
            app:theme="@style/ToolbarColoredBackArrow"


            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <!--app:theme="@style/ToolbarColoredBackArrow"-->

    <Button
            android:id="@+id/button"
            android:text="@string/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/editText3" app:layout_constraintStart_toEndOf="@+id/button2"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:id="@+id/button2"
            android:text="@string/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/editText3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button"/>

    <TextView
            android:id="@+id/textView"
            android:text="@string/name"
            android:textColor="@color/colorDrugstoreAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editText" app:layout_constraintEnd_toEndOf="@+id/editText"
            app:layout_constraintStart_toStartOf="@+id/editText"/>

    <TextView
            android:id="@+id/textView2"
            android:text="@string/composition"
            android:textColor="@color/colorDrugstoreAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toEndOf="@+id/editText2"
            app:layout_constraintStart_toStartOf="@+id/editText2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editText2"/>


    <TextView
            android:id="@+id/textView3"
            android:text="@string/country"
            android:textColor="@color/colorDrugstoreAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toEndOf="@+id/editText3"
            app:layout_constraintStart_toStartOf="@+id/editText3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editText3"/>

    <TextView
            android:id="@+id/textView4"
            android:text="@string/add_drug"
            android:textColor="@color/colorDrugstoreAccent"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toEndOf="@+id/editText"
            app:layout_constraintStart_toStartOf="@+id/editText"
            app:layout_constraintTop_toBottomOf="@+id/tool_bar" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView" android:layout_marginTop="8dp"/>

    <EditText
            android:id="@+id/editText"
            android:hint="@string/name_sample"
            android:inputType="text"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"

            tools:ignore="Autofill,LabelFor"
            app:layout_constraintTop_toBottomOf="@+id/tool_bar"
            app:layout_constraintBottom_toTopOf="@+id/editText2" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>

    <EditText
            android:id="@+id/editText2"
            android:hint="@string/composition_sample"
            android:inputType="text"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"

            tools:ignore="Autofill,LabelFor"
            app:layout_constraintTop_toBottomOf="@+id/editText"
            app:layout_constraintBottom_toTopOf="@+id/editText3" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>

    <EditText
            android:id="@+id/editText3"
            android:hint="@string/country_sample"
            android:inputType="text"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"

            tools:ignore="Autofill,LabelFor"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/editText2"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>